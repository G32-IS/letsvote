generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SysAdmin
  Admin
  Voter
}

model User {
  id              String  @id @default(cuid()) @map("_id")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  email           String  @unique
  hashedPassword  String
  name            String?
  role            UserRole
}